cat > "$PROJ/jenkins/Jenkinsfile" <<'EOF'
pipeline {
  agent any
  options { timestamps() }

  environment {
    AWS_REGION = "ap-south-1"
    ECR_REPO   = "demo-app"
    APP_NAME   = "app"
    APP_NS     = "default"
    SLACK_WEBHOOK_URL = ""        // leave empty if not used
    EMAIL_TO = ""                 // set recipients if using email-ext plugin
  }

  stages {
    stage('Checkout') { steps { checkout scm } }

    stage('Terraform Apply (once)') {
      steps {
        sh '''
          set -e
          cd terraform
          terraform init -input=false
          terraform apply -input=false -auto-approve -var-file=env/dev/dev.tfvars
        '''
      }
    }

    stage('ECR Login') { steps { sh 'scripts/ecr-login.sh' } }

    stage('Build & Push Image') {
      steps {
        script {
          def commit = sh(script: "git rev-parse --short HEAD", returnStdout: true).trim()
          def tag = "${commit}-${env.BUILD_NUMBER}"
          sh """
            set -e
            ACCOUNT_ID=\$(aws sts get-caller-identity --query Account --output text)
            REGISTRY="\${ACCOUNT_ID}.dkr.ecr.${env.AWS_REGION}.amazonaws.com"
            IMAGE="\${REGISTRY}/${env.ECR_REPO}:${tag}"
            docker build -t "\${IMAGE}" ./app
            docker push "\${IMAGE}"
            echo "\${IMAGE}" > image.txt
          """
        }
      }
    }

    stage('Deploy (Helm --atomic)') {
      steps {
        sh '''
          set -e
          CLUSTER_NAME=$(terraform -chdir=terraform output -raw cluster_name)
          aws eks update-kubeconfig --name "$CLUSTER_NAME" --region "${AWS_REGION}"
          IMAGE=$(cat image.txt)
          REPO=$(echo "$IMAGE" | awk -F: '{print $1}')
          TAG=$(echo "$IMAGE" | awk -F: '{print $2}')
          mkdir -p helm/app-chart/generated
          sed "s#CHANGEME_ECR_URL/demo-app#${REPO%:*}#g" helm/app-chart/values.yaml > helm/app-chart/generated/values.yaml
          if command -v yq >/dev/null; then
            yq -i ".image.tag = \\"${TAG}\\"" helm/app-chart/generated/values.yaml
          else
            sed -i "s#tag:.*#tag: \\"${TAG}\\"#g" helm/app-chart/generated/values.yaml
          fi
          helm upgrade --install ${APP_NAME} helm/app-chart -n ${APP_NS} --create-namespace -f helm/app-chart/generated/values.yaml --atomic --wait --timeout 5m
        '''
      }
    }

    stage('Post-Deploy Validation') { steps { sh 'scripts/validate.sh' } }
  }

  post {
    success {
      sh '''
        if [ -n "${SLACK_WEBHOOK_URL}" ]; then
          curl -X POST -H 'Content-type: application/json' --data "{\"text\":\"✅ Success: ${JOB_NAME} #${BUILD_NUMBER}\"}" "${SLACK_WEBHOOK_URL}"
        fi
      '''
      // Uncomment if you have Email Extension plugin configured:
      // emailext subject: "SUCCESS: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
      //          to: "${EMAIL_TO}", body: "Build succeeded."
    }
    failure {
      sh '''
        echo "Deployment failed; attempting rollback..."
        scripts/rollback.sh || true
        if [ -n "${SLACK_WEBHOOK_URL}" ]; then
          curl -X POST -H 'Content-type: application/json' --data "{\"text\":\"❌ Failed: ${JOB_NAME} #${BUILD_NUMBER} (rollback attempted)\"}" "${SLACK_WEBHOOK_URL}"
        fi
      '''
      // Uncomment if you have Email Extension plugin configured:
      // emailext subject: "FAILURE: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
      //          to: "${EMAIL_TO}", body: "Build failed. Rollback attempted."
    }
  }
}
